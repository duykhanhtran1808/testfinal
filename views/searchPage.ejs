                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 id="deletePostModalLabel" class="modal-title">Delete the post?</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>You won't be able to delete this.</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button id="deletePostButton" class="btn btn-primary" type="button">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>                    
                    <!-- code from delete post modal over -->

                    <!--code form Confirm Pin Modal -->
                    <div id="confirmPinModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="confirmPinModalLabel" aria-hidden="true">
